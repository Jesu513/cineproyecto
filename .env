# ============================================
# PHPMailer (ENVÍO DE CORREOS)
# Configuración para Gmail:
# 1. Activar verificación en 2 pasos
# 2. Generar contraseña de aplicación en:
#    https://myaccount.google.com/apppasswords
# 3. Usar esa contraseña aquí
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@cinema.com
MAIL_FROM_NAME="Cinema Booking"
MAIL_REPLY_TO_ADDRESS=support@cinema.com
MAIL_REPLY_TO_NAME="Cinema Support"
MAIL_DEBUG=0

# ============================================
# REDIS (CACHÉ Y SESIONES)
# Si no tienes Redis instalado:
# - Windows: https://github.com/microsoftarchive/redis/releases
# - Linux: sudo apt-get install redis-server
# - Mac: brew install redis
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DATABASE=0

# ============================================
# CONFIGURACIÓN DE RESERVAS
# ============================================
BOOKING_TEMP_RESERVATION_MINUTES=10
BOOKING_CANCELLATION_HOURS=2

# ============================================
# ARCHIVOS Y UPLOADS
# ============================================
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# ============================================
# CORS (CROSS-ORIGIN RESOURCE SHARING)
# Separar múltiples URLs con comas
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# ============================================
# FRONTEND
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# LOGGING
# Niveles: debug, info, warning, error
# ============================================
LOG_LEVEL=debug

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# SEGURIDAD
# ============================================
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900